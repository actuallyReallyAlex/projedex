{
  "name": "projedex-api",
  "version": "0.0.0",
  "description": "Backend for Projedex.",
  "main": "index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "env-cmd -e development nodemon src/index.js",
    "debug": "env-cmd -e development node --inspect src/index.js",
    "test": "env-cmd -e test jest --watch --runInBand",
    "coverage": "env-cmd -e test jest --runInBand --detectOpenHandles --coverage",
    "view-coverage": "http-server ./coverage/lcov-report -s -c-1 -o"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "author": "Alex Lee <www.alexlee.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexlee-dev/projedex.git"
  },
  "keywords": [
    "project",
    "dashboard",
    "overview",
    "projedex"
  ],
  "bugs": {
    "url": "https://github.com/alexlee-dev/projedex/issues"
  },
  "homepage": "https://projedex.netlify.com/",
  "dependencies": {
    "@octokit/rest": "^16.43.1",
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.5.2",
    "mongoose": "^5.8.11",
    "validator": "^12.2.0"
  },
  "devDependencies": {
    "@types/jest": "^25.1.1",
    "env-cmd": "^10.0.1",
    "http-server": "^0.12.1",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2"
  }
}
